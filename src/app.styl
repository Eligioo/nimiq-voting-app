nimiq-blue = #1F2348

#introduction
  max-width 75rem
  margin-bottom 6rem
  text-align center

#app > *
  margin-left auto
  margin-right auto

.nq-link
  cursor pointer

p
  font-size 2rem
  line-height 1.3

.i > *
  display none

.nq-card
  width 52.5rem
  min-height 70.5rem
  display flex
  flex-direction column

  .nq-card-header
    flex 0 0
    h1
      font-size 3rem
      line-height 1.3
      font-weight bold
      margin 0 0 1.5rem 0
    .sub
      margin 0
      font-weight 600

  .nq-card-body
    flex 1 0
    display flex
    flex-direction column

  .nq-card-footer
    flex 0 0
    padding-left 4rem
    padding-right 4rem
    text-align center

    .nq-button
      margin-top 4rem
      margin-bottom 1rem
      min-width 33.75rem

.disclaimer
  opacity .5
  font-size: 1.75rem
  line-height 2.125rem
  font-weight 600

.voting
  p.sub
    color var(--nimiq-light-blue)

  .choices
    padding 1em 0
    display flex
    flex 1 0

    .choice
      input
        display none
      label
        font-weight bold
        display flex
        justify-content center
        align-items center
        font-size 2.5rem
        line-height 1

  &.singleChoice, &.multipleChoice
    .choices
      flex-direction row
      justify-content space-between
      height 100%

      .choice
        flex 0
        display flex
        flex-direction row
        justify-content space-between
        align-items center
        label
          flex 1 0 calc(100% - 1rem)
          color rgba(nimiq-blue, .5)
          border .25rem solid rgba(nimiq-blue, .16)
          text-align center
          height calc(100% - 2rem)

        input:checked + label
          background nimiq-blue
          color white

      &.wrap
        flex-wrap wrap

      &.two .choice
        flex-basis calc(50% - 1rem)
        // align-items stretch
        min-height 12.5rem

      &.three .choice
        flex-basis  calc(33.333% - 1rem)
        height 12.5rem

